import rospy
from std_msgs.msg import String

def callback(data):
    rospy.loginfo(rospy.get_caller_id() + "Info: %s", data.data)

def escucha():

    rospy.init_node('escucha', anonymous=True)

    rospy.Subscriber("platica", String, callback)

    rospy.spin()

if __name__ == '__main__':
    escucha()

